{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_profile'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_profile'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{  user.email }}</dd>
        </dl>

        <p>
            <a class="btn btn-outline-primary" href="{{ url('user_change_data', {id: user.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
        </p>

        <h3>{{ 'label.books_owned'|trans }}</h3>
        <table class="table table-striped">
            <thead>
            <tr>

                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.author'|trans }}</th>
                <th>{{ 'label.description'|trans }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.tags'|trans }}</th>

            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>
                        {{ book.title}}
                    </td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.description }}</td>
                    <td>
                        <a class="btn btn-outline-primary"
                           href="{{ url('book_index', {'categoryId' : book.category.id}) }}"
                           title="{{ book.category.title }}">
                            {{ book.category.title }}
                        </a>

                    </td>
                    <td>
                        {% if book.tags is defined and book.tags|length %}
                            {% for tag in book.tags %}
                                <a class="btn btn-outline-primary"
                                   href="{{ url('book_index', {'tagId' : tag.id}) }}"
                                   title="{{ tag.title }}">
                                    {{ tag.title }}
                                </a>
                            {% endfor %}
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p>
            <a href="{{ url('book_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        {% include'default/_single_alert_message.html.twig' with{
            type: 'warning',
            message: 'message.record_not_found'| trans
        } %}
    {% endif %}
{% endblock %}