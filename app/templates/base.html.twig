{#                    {{ message }}#}
{#                </div>#}
{#            {% endfor %}#}
{#        {% endfor %}#}
{#        {% block body %}{% endblock %}#}
{#    </div>#}
    <div class="container-fluid">
        {% include 'default/_flash_messages.html.twig' %}
        {% block body %}{% endblock %}
    </div>


</main>
